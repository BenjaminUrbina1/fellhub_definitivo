<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicial"
    tools:context=".activityEstadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis Estadísticas"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#4B3F72"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Métricas Principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Frecuencia Cardíaca -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_heart_rate"
                            app:tint="#D81B60"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frecuencia Cardíaca"
                            android:textColor="#4B3F72"
                            android:textSize="14sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvHeartRatePercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- %"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#1F1A33"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Saturación de Oxígeno -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_oxygen"
                            app:tint="#1976D2"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saturación de Oxígeno"
                            android:textColor="#4B3F72"
                            android:textSize="14sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvOxygenSaturationPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- %"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#1F1A33"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Estadísticas Detalladas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleGroupDateFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:singleSelection="true"
                        app:checkedButton="@+id/btnWeekly">

                        <Button
                            android:id="@+id/btnWeekly"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semanales"/>

                        <Button
                            android:id="@+id/btnMonthly"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meses"/>

                        <Button
                            android:id="@+id/btnYearly"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anuales"/>
                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <TextView
                        android:id="@+id/tvStatsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estadísticas Semanales"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4B3F72"
                        android:gravity="center"
                        android:layout_marginTop="16dp"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mensaje de Estado de Ánimo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E8E2FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivMoodIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/buenos"
                        android:contentDescription="Icono de estado de ánimo"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:id="@+id/tvMoodMessage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tu estado de ánimo parece estable. ¡Sigue así!"
                        android:textSize="16sp"
                        android:textColor="#4B3F72"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="#F7F4FF"
        app:menu="@menu/bottom_menu" />

    <!-- Botón del Corazón con texto "Inicio" -->
    <FrameLayout
        android:id="@+id/btnHeart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Volver a Inicio"
        android:elevation="8dp"
        app:layout_anchor="@id/bottomNavigationView"
        app:layout_anchorGravity="top|center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/corazon_shape"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:elevation="1dp"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
