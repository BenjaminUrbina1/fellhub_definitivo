<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicial"
    android:fillViewport="true">

    <!-- Contenedor blanco central -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="50dp"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoFellpulseHub"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textColor="#4B3E6D"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_borde"
            android:padding="14dp"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@drawable/edittext_borde"
            android:padding="14dp"
            android:layout_marginBottom="32dp"/>

        <!-- Botón Iniciar sesión -->
        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:background="@drawable/botonredondeado"/>

        <!-- Botón Registrarse -->
        <TextView
            android:id="@+id/tvRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register_link" 
            android:textColor="#8A2BE2" 
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</ScrollView>
