<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para los TextView de los tips -->
    <style name="TipTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#311B92</item>
    </style>

    <!-- Estilos para la pantalla de Inicio -->
    <style name="InicioBloquePrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="InicioIcono">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="InicioTexto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#4B3F72</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InicioCardSimplified">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="InicioIconoCard">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="InicioTextoCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#4B3F72</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Estilos para las tarjetas de hábitos -->
    <style name="HabitCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="HabitCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="HabitIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:tint">#7B1FA2</item>
    </style>

    <style name="HabitText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#311B92</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilos para la pantalla de Estadísticas (Simplificado para evitar error) -->
    <style name="StatCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="StatCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="StatIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:tint">#7B1FA2</item>
    </style>

    <style name="StatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4B3F72</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
